

<div class="container page-container">
  <div class="half-block left">
    <%= simple_form_for [@game, @challenge] do |f| %>
      <%= f.input :question, as: :string %>
      <%= f.input :answer_1, as: :string %>
      <%= f.input :answer_2, as: :string %>
      <%= f.input :answer_3, as: :string %>
      <%= f.input :correct_answer, as: :string %>
      <%= f.input :points, as: :integer %>
      <%= f.button :submit %>
    <% end %>
  </div>

  <div class="half-block right" style="background-image: url('<%= asset_path 'map.jpeg' %>')">
  </div>
</div>

<div class="progress-bottom">
  <div class='step-two'></div>
</div>
