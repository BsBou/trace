<%= simple_form_for [ @game, @game.challenges.first ] do |f| %>
  <%= f.input :location, as: :string %>
  <%= f.input :question, as: :string %>
  <%= f.input :correct_answer, as: :string %>
  <%= f.input :answer_1, as: :string %>
  <%= f.input :answer_2, as: :string %>
  <%= f.input :answer_3, as: :string %>
  <%= f.input :points, as: :integer %>
  <%= f.button :submit %>
<% end %>
