<%= render "shared/navbar/navbar-home" %>


<div class="hero-banner">
  <div class="container">
    <%= image_tag "Logo.png" %>
    <h1>Merging the digital and real-world experience through scavenger hunt games.</h1>
    <div>
      <%= link_to "Create a game", new_user_session_path, class: "button beige" %>
      <%= link_to "Join a game", new_user_session_path, class: "button green" %>
    </div>
  </div>
</div>
<div class="description-banner vertical-center">
  <div class="container vertical-center">
    <h3>Plan and manage it all on trace</h3>
    <div class="use-cases"><p>Team-building work activities</p><hr></div>
    <div class="use-cases"><p>School trips and excursions</p><hr></div>
    <div class="use-cases"><p>Educational city tours</p><hr></div>
    <div class="use-cases"><p>Social and recreational events</p><hr></div>
  </div>
</div>
<div class="bottom-banner">
  <div>
    <div class="container d-flex how-it-works">
        <%= image_tag "placeholder.png" %>
        <div class="bottom-banner guide">
          <h2>How it works</h2>
          <ul>
            <li><div class='home-marker'>1</div><p>Create a game</p></li>
            <li><div class='home-marker'>2</div><p>Plot out the challenges, points and locations across the map</p></li>
            <li><div class='home-marker'>3</div><p>Share the unique game code with players</p></li>
            <li><div class='home-marker'>4</div>
              <p>Players complete challenges by visiting each location and answering questions</p></li>
            <li><div class='home-marker'>5</div><p>Highest score and best time wins!</p></li>
          </ul>
        </div>
    </div>
  </div>
   <div class="buttons d-flex justify-content-center ">
      <%= link_to "Create a game", new_user_session_path, class: "button beige" %>
      <%= link_to "Join a game", new_user_session_path, class: "button green" %>
    </div>
  <div class="container w-70">
    <div class="newsletter">
      <div class="newsletter content">
        <div class="info">
          <div>
            <h2>Keep in the loop</h2>
            <p>Be the first to hear about a scavenger hunt happening near you.</p>
          </div>
        </div>
        <div class="subscribe">
          <div class="subscribe form">
            <h3>Subscribe</h3>
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="button-addon2">
              <button class="btn btn-outline-secondary" type="button" id="button-addon2">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <div class="footer-copyright">
    <%= link_to root_path do %>
      <%= image_tag "Logo.png" %>
    <% end %>
  </div>
  <div class="footer-items" >
    <ul>
      <li>
        <%= link_to "Terms", "#"%>
      </li>
      <li>
        <%= link_to "Privacy", "#"%>
      </li>
      <li>
        <%= link_to "Cookies", "#"%>
      </li>
    </ul>
  </div>
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
</div>
