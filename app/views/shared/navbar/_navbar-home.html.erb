<div class="navbar container">
  <div class="container d-flex justify-content-between">
    <div class="navbar items" >
      <%= link_to root_path do %>
        <%= image_tag "trace-logo.gif", class:"logo-nav" %>
      <% end %>
      <% if !user_signed_in? %>
        <div>
          <ul>
            <li>
              <%= link_to "How it works", "#"%>
            </li>
            <li>
              <%= link_to "About us", "#"%>
            </li>
          </ul>
        </div>
        <div>
          <ul>
            <li>
              <%= link_to "Create a game", new_user_session_path, class: "button beige" %>
            </li>
            <li>
              <%= link_to "Join a game", new_user_session_path, class: "button green" %>
            </li>
          </ul>
        </div>
      <% else %>
        <div>
          <ul>
            <li>
              <%= link_to "Dashboard", user_path(current_user),class: "dashboard button green"%>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
